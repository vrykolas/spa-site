{
  "env": {
      "browser": true,
      "mocha": true
  },
  "extends": "standard",
  "plugins": [
    "standard",
    "mocha"
  ],
  "rules": {
    "keyword-spacing": [
      "error",
      {
        "before": true,
        "after": false,
        "overrides": {
          "case": { "after": true },
          "else": { "after": true },
          "export": { "after": true },
          "from": { "after": true },
          "return": { "after": true },
          "try": { "after": true }
        }
      }
    ],
    "semi": [2, "always"],
    "space-before-function-paren": [2, "never"]
  },
  "globals": {
    "browser": false,
    "_": false
  }
}
