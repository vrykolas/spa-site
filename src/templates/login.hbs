<div class="row">
  <form class="col-md-4 col-md-offset-4 clearfix" id="login">
    <div class="form-group has-feedback clearfix">
      <label for="email">Email address</label>
      <input type="email" class="form-control" id="email" name="email" placeholder="Email" value="{{email}}">
      <span class="glyphicon glyphicon-ok form-control-feedback form-control-feedback-success" aria-hidden="true"></span>
      <span class="glyphicon glyphicon-remove form-control-feedback form-control-feedback-error" aria-hidden="true"></span>
      <label for="email" class="form-control-error form-control-email-error"></label>
    </div>
    <div class="form-group has-feedback clearfix">
      <label for="password">Password</label>
      <input type="password" class="form-control" id="password" name="password" placeholder="Password">
      <span class="glyphicon glyphicon-ok form-control-feedback form-control-feedback-success" aria-hidden="true"></span>
      <span class="glyphicon glyphicon-remove form-control-feedback form-control-feedback-error" aria-hidden="true"></span>
      <label for="password" class="form-control-error form-control-password-error"><label>
    </div>
    <div class="form-group clearfix">
      <a href="/forgotten-password" class="forgotten-password-link pull-right">Forgotten Password</a>
    </div>
    <button type="submit" class="btn btn-success pull-right login-button">Login</button>
  </form>
</div>
